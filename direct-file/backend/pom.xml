        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../boms/irs-spring-boot-starter-parent</relativePath>
    </parent>
    <groupId>gov.irs.directfile</groupId>
    <artifactId>directfile-api</artifactId>
