{
  "name": "@irs/df-static-site",
  "version": "0.0.2",
  "type": "module",
  "private": true,
  "dependencies": {
    "@irs/df-common": "*",
    "@trussworks/react-uswds": "^8.0.0",
    "@types/js-yaml": "^4.0.5",
    "@uswds/uswds": "^3.7.1",
    "@vitejs/plugin-react": "^4.2.0",
    "assert-never": "^1.2.1",
    "classnames": "^2.3.2",
    "crypto-js": "4.2.0",
    "exceljs": "^4.3.0",
    "i18next": "23.16.4",
    "js-yaml": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.1.0",
    "react-router-dom": "^6.27.0",
    "uuid": "^9.0.0",
    "vite": "^5.4.15",
    "vite-tsconfig-paths": "^4.2.0",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "prestart": "npm install",
    "start": "vite",
    "start:promisc": "vite --host",
    "build": "npm run build:ts && vite build",
    "build:ts": "tsc --build",
    "build:development": "vite build --mode=development",
    "preview": "vite preview --port 3030 --open",
    "test": "vitest",
    "test:ci": "vitest --run --silent",
    "test:update": "vitest -u",
    "lint": "npm run lint:css && npm run lint:ts",
    "lint:css": "stylelint \"./src/**/*.scss\" --max-warnings=0",
    "lint:css:fix": "stylelint \"./src/**/*.scss\" --fix",
    "prelint:ts": "npm run build:ts",
    "lint:ts": "eslint ./src --max-warnings=0",
    "lint:ts:fix": "eslint ./src --fix",
    "format": "prettier -c ./src",
    "format-write": "prettier -w ./src",
    "tsc:watch": "tsc --watch",
    "export-locales": "vite-node src/scripts/exportLocales",
    "import-locales": "vite-node src/scripts/importLocales"
  },
  "devDependencies": {
    "@modyfi/vite-plugin-yaml": "^1.1.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.0",
    "@types/prettier": "^2.7.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^9.0.1",
    "@vitest/ui": "^1.4.0",
    "autoprefixer": "^10.4.14",
    "browserslist-to-esbuild": "^1.2.0",
    "eslint-plugin-df-rules": "^1.0.0",
    "exceljs": "^4.3.0",
    "happy-dom": "^15.10.2",
    "postcss": "^8.4.31",
    "prettier": "^2.8.7",
    "sass": "^1.63.5",
    "ts-node": "^10.9.1",
    "typescript": "5.6.3",
    "vite-node": "^2.1.8",
    "vitest": "^1.6.1",
    "zod": "^3.23.8"
  }
}
